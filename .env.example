# Application
APP_NAME=myCLAP
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://my.le-clap.fr

# Locale
APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=myclap
DB_USERNAME=root
DB_PASSWORD=root

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Filesystem
FILESYSTEM_DISK=local

# Cache
CACHE_STORE=file

# CLA Authentication
CLA_AUTH_HOST=https://centralelilleassos.fr
CLA_AUTH_IDENTIFIER=myclap

# Dev Authentication Bypass (local only - set username to auto-login)
DEV_AUTO_LOGIN_USERNAME=

# Vite
VITE_APP_NAME="${APP_NAME}"
